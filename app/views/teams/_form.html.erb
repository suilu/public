<%= form_for @team do |f| %>

<div class="form-team">
    <div class="form-team string optional">
        <%= f.label "请填写团队或者公司的名称", :class => "string optional control-label" %>
        <%= f.text_field :title, :class => "string optional form-control" %>
    </div>
</div>

<%= f.submit "创建团队", class: "btn btn-success", data: { disable_with: "Submitting..." } %>

<% end %>

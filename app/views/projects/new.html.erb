<body class="container">
    <div class="project">
        <div class="projectCreate">
            <h2 class="text-center">新的任务</h2>
            <div class="col-md-4 col-md-offset-4">
                <%= simple_form_for [@team,@project] do |f| %>
                <div class="form-project">
                    <%= f.input :title, input_html: { class: "form-control"} %>
                </div>
                <div class="form-actions">
                    <%= f.submit "添加新任务", disable_with: "Submiting...", class: "btn btn-success"%>
                </div>
                <% end %>
            </div>
        </div>
    </div>
</body>

<style>
    body {
        background-color: rgb(244, 247, 237);
    }
    .project {
        margin: 0 auto;
        width: 1000px;
        height: 600px;
        background-color: #fff;
        border-style: solid;
        border-width: 1px;
        border-color: rgb(219, 223, 214);

    }
    .projectCreate{
      margin-top: 50px;
  
    }
    .projectCreate h2 {
        font-size: 23px;
    }

</style>

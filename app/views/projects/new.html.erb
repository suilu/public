<h2 class="text-center">新的任务</h2>

<div class="col-md-4 col-md-offset-4">
  <%= simple_form_for [@team,@project] do |f| %>
    <div class="form-project">
      <%= f.input :title, input_html: { class: "form-control"} %>
    </div>
    
    <div class="form-actions">
      <%= f.submit "添加新任务", disable_with: "Submiting...", class: "btn btn-success"%>
    </div>
  <% end %>
</div>
